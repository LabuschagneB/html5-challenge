{
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [{
            "source": "**/*.@(jpg|jpeg|gif|png|css|js|mp4|webm)",
            "headers": [{
                "key": "Cache-Control",
                "value": "max-age=2000000"
            }]
        }]
    }
}